<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="500dp"
    tools:context=".BuscarSitiosFragment"
    android:background="@drawable/buscar_sitios_background"
    android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:fontFamily="@font/antic_slab"
            android:paddingBottom="10dp"
            android:text="@string/recuerdas_el_sitio"
            android:textColor="@color/Gris_carbon"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etBuscarSitio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/escribe_el_nombre_del_sitio"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:importantForAutofill="yes"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:autofillHints="name"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvResultadosBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_marginTop="120dp"/>

</FrameLayout>